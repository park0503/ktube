extends ../base.pug

block content
    if errorMessage
            span=errorMessage
    form(method='post', enctype="multipart/form-data").edit-profile__form
        img(src=`/${loggedInUser.avatarUrl}` style="width: 100px; height=100px;")
        label(for='avatar') Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(name="name", type="text", required, placeholder="Name", value=loggedInUser.name)
        input(name="email", type="text", required, placeholder="Email", value=loggedInUser.email)
        input(name="username", type="eamil", required, placeholder="UserName", value=loggedInUser.username)
        input(name="location", type="text", required, placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Edit")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;