extends ../base.pug
include ../mixins/video

block content
    div#videoContainer
        video(src=`/${video.fileUrl}`, controls, style="width: 960px; height: 540px;")
        button#play Play
        button#mute Mute
        input(type="range",step="0.1", value = 0.5, min="0", max="1")#volume
        div 
            span#currentTime 00:00:00
            span  / 
            span#totalTime 00:00:00
        div 
            input(type="range",step="1", value = 0, min="0")#timeline
        div 
            button#fullscreenBtn Enter Full Screen
    //-
        small Uploaded by 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
        div
            p=video.description
            ul
                each hashtag in video.hashtags
                    li=hashtag
            small=video.createdAt
        if String(loggedInUser._id) === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit video ðŸ‘‰
            br
            a(href=`${video.id}/delete`) Delete Video ðŸ‘‰

block scripts
    script(src="/assets/js/videoPlayer.js")